<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.RegisterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/holo_blue_dark">

        <EditText
            android:id="@+id/email_register"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="140dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edittext_top_curv_gray"
            android:hint="Email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/pass_register"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_below="@id/email_register"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edittext_top_curv_gray"
            android:hint="Password"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/confirm_pass_register"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_below="@id/pass_register"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edittext_top_curv_gray"
            android:hint="Confirm Password"
            android:inputType="textVisiblePassword" />

        <EditText
            android:id="@+id/first_name_register"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_below="@id/confirm_pass_register"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edittext_top_curv_gray"
            android:hint="First Name"
            android:inputType="textPersonName" />


        <EditText
            android:id="@+id/last_name_register"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_below="@id/first_name_register"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edittext_top_curv_gray"
            android:hint="Last Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/age_register"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_below="@id/last_name_register"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edittext_top_curv_gray"
            android:hint="Age"
            android:inputType="textPhonetic" />

        <Spinner
            android:id="@+id/type_spinner"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_below="@id/age_register"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edittext_top_curv_gray"
            android:entries="@array/users_type"
            android:spinnerMode="dropdown"
            android:tooltipText="User Type">

        </Spinner>

        <Button
            android:id="@+id/back_btn"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_below="@id/type_spinner"
            android:layout_marginLeft="10dp"
            android:text="Back"
            android:layout_marginTop="15dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:paddingBottom="20dp"
            ></Button>

        <Button
            android:id="@+id/sign_up_btn"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_below="@id/type_spinner"
            android:layout_marginStart="195dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/back_btn"
            android:background="@android:color/white"
            android:gravity="center"
            android:text="Sign Up"></Button>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>