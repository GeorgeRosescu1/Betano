<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">


            <TextView
                android:id="@+id/card_teams_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Home Team vs Away Team"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/card_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_teams_text"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:text="Match Date"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textSize="12dp" />


            <TextView
                android:id="@+id/card_1_text"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_below="@id/card_date_text"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:background="@color/colorPrimary"
                android:clickable="true"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="1"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/card_x_text"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_below="@id/card_date_text"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/card_1_text"
                android:background="@color/colorPrimary"
                android:clickable="true"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="X"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/card_2_text"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_below="@id/card_date_text"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/card_x_text"
                android:background="@color/colorPrimary"
                android:clickable="true"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="2"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/card_1_share_text"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColor="@android:color/black"
                android:text="1 share"
                android:layout_below="@+id/card_1_text"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/card_x_share_text"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:layout_marginLeft="75dp"
                android:paddingRight="15dp"
                android:layout_toRightOf="@+id/card_1_share_text"
                android:textColor="@android:color/black"
                android:text="X share"
                android:layout_below="@+id/card_x_text"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/card_2_share_text"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:layout_marginLeft="65dp"
                android:paddingLeft="15dp"
                android:layout_toRightOf="@+id/card_x_share_text"
                android:paddingRight="15dp"
                android:layout_below="@+id/card_2_text"
                android:textColor="@android:color/black"
                android:text="2 share"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                android:textStyle="bold" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>