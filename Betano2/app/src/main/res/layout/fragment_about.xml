<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">



    <ImageView
        android:id="@+id/imageview_about"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/logo" />

    <TextView
        android:id="@+id/text_about"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:background="@android:color/white"
        android:layout_below="@id/imageview_about"
        android:text="Please note that this is a betting application for people that are 18 years of age and over. Betano is a betting company. By using this application you give the company permission to use your personal data. Proceeding into this application underage will have no effect on the company if anything goes wrong"
        android:textColor="#000"
        android:textAlignment="center"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/last_about"
        android:layout_width="270dp"
        android:layout_height="30dp"
        android:text="Many Thanks, Team Betano!"
        android:layout_marginLeft="50dp"
        android:layout_below="@+id/text_about"
        android:textColor="#000"
        android:background="@android:color/white"
        android:textSize="20sp"></TextView>
</RelativeLayout>