<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_profile"
    android:background="@color/colorPrimary">

    //android:text="Here is the profile fragment." />

    <ImageView
        android:id="@+id/imageview_profile"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/logo" />

    <TextView
        android:id="@+id/mail_profile"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/white"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:text="Mail:"
        android:textSize="30sp"></TextView>

    <TextView
        android:id="@+id/last_name_profile"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/white"
        android:layout_below="@id/mail_profile"
        android:layout_marginTop="5dp"
        android:text="Nume:"
        android:textSize="30sp"></TextView>

    <TextView
        android:id="@+id/first_name_profile"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/white"
        android:layout_below="@id/last_name_profile"
        android:layout_marginTop="5dp"
        android:text="Prenume:"
        android:textSize="30sp"></TextView>

    <TextView
        android:id="@+id/age_profile"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/white"
        android:layout_below="@id/first_name_profile"
        android:layout_marginTop="5dp"
        android:text="Varsta:"
        android:textSize="30sp"></TextView>

    <TextView
        android:id="@+id/budget_profile"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/white"
        android:layout_below="@id/age_profile"
        android:layout_marginTop="5dp"
        android:text="Buget:"
        android:textSize="30sp"></TextView>
</RelativeLayout>